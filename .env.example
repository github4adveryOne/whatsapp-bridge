# n8n webhook for incoming WhatsApp messages
N8N_INCOMING_WEBHOOK=https://flow.advery.one/webhook/whatsapp-incoming

# n8n endpoint to poll for outgoing messages (returns JSON: { messages: [{to, body, id?}] })
N8N_OUTGOING_POLL=https://flow.advery.one/webhook/whatsapp-outgoing-poll

# Optional: endpoint to acknowledge sent messages
# N8N_ACK_URL=https://flow.advery.one/webhook/whatsapp-ack

# Polling interval in milliseconds (default: 5000 = 5 seconds)
POLL_INTERVAL=5000
